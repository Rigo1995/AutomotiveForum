@model IEnumerable<AutomotiveForum.Models.Forum>

@{
    ViewBag.Title = "Index";
}

<h2>Discussion Board</h2>

<p>
    @Html.ActionLink("Create New Topic", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Topic)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Topic)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.TopicId }) |
            @Html.ActionLink("Details", "Details", new { id = item.TopicId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TopicId })

        </td>
    </tr>
    }

</table>
