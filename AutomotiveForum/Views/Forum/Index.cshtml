@model IEnumerable<AutomotiveForum.Models.Forum>

@{
    ViewBag.Title = "Index";
}

<h2>Discussion Board</h2>

<p>
    @Html.ActionLink("Create New Article", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Topic)
        </th>      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserRole)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Timestamp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Topic)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.TopicId }) |
            @Html.ActionLink("Details", "Details", new { id = item.TopicId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TopicId })
        </td>
    </tr>
}

</table>
